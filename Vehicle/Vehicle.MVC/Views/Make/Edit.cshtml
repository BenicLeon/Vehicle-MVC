@model Vehicle.Common.ViewModels.VehicleMakeViewModel

<div class="container mt-4">
    <h2 class="mb-4">Edit Vehicle Make</h2>

    <form asp-action="Edit" method="post" class="card p-4">
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label asp-for="Name" class="control-label fw-bold"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter make name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Abrv" class="control-label fw-bold"></label>
            <input asp-for="Abrv" class="form-control" placeholder="Enter abbreviation" />
            <span asp-validation-for="Abrv" class="text-danger"></span>
        </div>

        <div class="form-group mt-4 d-flex justify-content-start gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Save
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}