@model Vehicle.Common.ViewModels.VehicleMakeViewModel

<div class="container mt-4">
    <h2 class="mb-4">Delete Vehicle Make</h2>

    @if (Model == null)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            The vehicle make could not be found.
        </div>
    }
    else
    {
        <div class="card p-4">
            <h3 class="mb-4">Are you sure you want to delete "<strong>@Model.Name</strong>"?</h3>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">Make Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-bold">Abbreviation</dt>
                <dd class="col-sm-9">@Model.Abrv</dd>
            </dl>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="d-flex justify-content-start gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    }
</div>