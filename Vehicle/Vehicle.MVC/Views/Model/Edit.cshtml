@model Vehicle.Common.ViewModels.VehicleModelViewModel

@{
    ViewData["Title"] = "Edit Model";
}

<div class="container mt-4">
    <h2 class="mb-4">Edit Vehicle Model</h2>

    <form asp-action="Edit" method="post" class="card p-4">
        <input type="hidden" asp-for="Id" />
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label asp-for="MakeId" class="control-label fw-bold">Select Make</label>
            <select asp-for="MakeId" class="form-control" asp-items="ViewBag.Makes">
                <option value="">-- Select a Make --</option>
            </select>
            <span asp-validation-for="MakeId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Name" class="control-label fw-bold">Model Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter model name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Abrv" class="control-label fw-bold">Abbreviation</label>
            <input asp-for="Abrv" class="form-control" placeholder="Enter abbreviation" />
            <span asp-validation-for="Abrv" class="text-danger"></span>
        </div>

        <div class="form-group mt-4 d-flex justify-content-start gap-2">
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Save
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}