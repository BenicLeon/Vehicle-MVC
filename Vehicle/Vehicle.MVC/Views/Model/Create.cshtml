@model Vehicle.Common.ViewModels.VehicleModelViewModel

@{
    ViewData["Title"] = "Create Model";
}

<h2>Create New Vehicle Model</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="MakeId" class="control-label">Select Make</label>
        <select asp-for="MakeId" class="form-control" asp-items="ViewBag.Makes"></select>
        <span asp-validation-for="MakeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Model Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Abrv" class="control-label">Abbreviation</label>
        <input asp-for="Abrv" class="form-control" />
        <span asp-validation-for="Abrv" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
